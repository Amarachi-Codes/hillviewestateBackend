generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  VISITOR
  RESIDENT
  ADMIN
}

enum RegistrationStatus {
  CONFIRMED
  CANCELLED
  WHITELISTED
}

enum EntryStatus {
  PENDING
  APPROVED
  CANCELLED
}

model User {
  id            String   @id @default(cuid())
  email         String   @unique
  password      String
  firstName     String?
  lastName      String?
  phone         String?
  residentIdNo  String
  role          Role     @default(RESIDENT)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  entryPermits  EntryPermit[] @relation("entryCode")
}

model EntryPermit {
  id             String      @id @default(cuid())
  residentName   String
  address        String
  createdAt      DateTime    @default(now())
  residentPhone  String
  code           String      @unique
  entryId        String
  entry          User        @relation("entryCode", fields: [entryId], references: [id])
  status         EntryStatus @default(PENDING)
}